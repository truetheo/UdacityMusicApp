<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="boxStyleOdd">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textColor">@color/mainTextWhite</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="boxStyleEven" parent="boxStyleOdd">
        <item name="android:background">@drawable/rounded_corner1</item>
        <item name="android:textColor">@color/mainBackground</item>

    </style>
    <style name="infoBox">
        <item name="android:background">@drawable/rounded_corner2</item>
        <item name="android:textSize">@dimen/infoBoxTextSize</item>
        <item name="android:textColor">@color/mainTextWhite</item>
        <item name="android:padding">@dimen/infoBOxPadding</item>
        <item name="android:layout_margin">3dp</item>
    </style>
    <style name="generalBackground">
        <item name="android:background">@color/mainLightGray</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">1dp</item>
    </style>

</resources>
