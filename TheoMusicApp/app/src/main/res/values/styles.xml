<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="boxStyleOdd">
        <item name="android:background">@color/mainDarkerGray</item>
        <item name="android:textColor">@color/mainTextWhite</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="boxStyleEven" parent="boxStyleOdd">
        <item name="android:background">@color/mainLightGray</item>
        <item name="android:textColor">@color/mainBackground</item>

    </style>

</resources>
